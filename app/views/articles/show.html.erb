<h5><%= markdown @article.title %></h5>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@article.user.avatar.tiny.url) if @article.user.avatar? %>
      submitted <%= time_ago_in_words(@article.created_at) %> ago by 
      <%= @article.user.name %>
    </small>    
    <p><%= markdown @article.body %></p>
  </div>
  <div class="span4">
    <% if can? :edit, @article %>
  <%= link_to "Edit", edit_wiki_article_path(@wiki, @article), class: 'btn btn-mini' %>
    <% end %>
     <% if can? :destroy, @article %>
      <%= link_to "Delete Post", [@wiki, @article], method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this article?' %>
    <% end %>  
  </div>
</div>