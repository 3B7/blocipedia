<h1>Wikis</h1>

<div class="row">
  <div class="span8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
          </h4>
        </div>
      </div>
    <% end %>
    <%= will_paginate @wikis %>
  </div>
  <div class="span4">
    <% if can? :create, Wiki %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
  <div class="span4">
    <% if current_user.role == 'member' %>
      <h5>Want to become a premium account user? Click below!</h5>
      <%= link_to "Premium Account", new_charge_path, class: 'btn btn-large btn-success' %>
    <% end %>
  </div>
</div>