<div class="container">
<h1><%= @wiki.title %></h1>
<h6><%= @wiki.body %></h6>
</br>

<% if can? :update, @wiki %>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-primary btn-medium' %>
<% end %>
</br>
</br>

<% if can? :create, Wiki %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-medium btn-danger', confirm: 'Are you sure you want to delete this wiki?' %>
<% end %>
</div>